---
import Layout from "../../layouts/Layout.astro";
import { Fetcher } from "../../utils/fetchUtils.js";

interface Product {
    id: number;
    name: string;
    weight: string | number | null;
    price: number;
    images: Array<{ src: string }>;
    slug: string;
}

const fetchComponent = new Fetcher();

const products = await fetchComponent.fetchData(
    "wp-json/wc/v3/products?per_page=100",
) as Product[];

const productsWithoutWeight = products.filter((p: Product) => !p.weight || p.weight === null);

---

<Layout title="Boutique">
    <div class="Boutique">
        <div class="Boutique__products">
            {
                products.map((product: Product) => (
                    <a
                        href={"/boutique/" + product.slug}
                        class="Boutique__products__product"
                    >
                        <img
                            class="Boutique__products__product__image"
                            src={
                                product.images[0]
                                    ? product.images[0].src
                                    : "/image-sample.webp"
                            }
                            alt=""
                        />
                        <h2 class="Boutique__products__product__title">
                            {product.name}
                        </h2>
                        <p class="Boutique__products__product__price">
                            {product.price} â‚¬
                        </p>
                    </a>
                ))
            }
        </div>
    </div>
</Layout>

<style lang="scss">
    .Boutique {
        max-width: 1280px;
        margin: 0 auto;
        &__debug {
            padding: 1rem 2rem;
            details {
                summary {
                    cursor: pointer;
                    padding: 0.5rem;
                    background-color: #f5f5f5;
                    border-radius: 4px;
                    &:hover {
                        background-color: #e5e5e5;
                    }
                }
                pre {
                    margin-top: 1rem;
                    padding: 1rem;
                    background-color: #f5f5f5;
                    border-radius: 4px;
                    overflow-x: auto;
                    font-size: 0.8rem;
                }
            }
        }
        &__warning {
            background-color: #fff3cd;
            border: 1px solid #ffeeba;
            color: #856404;
            padding: 1rem;
            margin: 1rem 2rem;
            border-radius: 4px;
            
            h3 {
                margin: 0 0 0.5rem 0;
            }
            
            ul {
                margin: 0.5rem 0 0 0;
                padding-left: 1.5rem;
            }
        }
        &__products {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
            gap: 1rem;
            padding: 2rem;
            &__product {
                &__image {
                    width: 100%;
                    height: 336px;
                    object-fit: cover;
                }
                &__title {
                    font-size: 1rem;
                    margin: 0.5rem 0;
                    font-family: "Lato", sans-serif;
                    font-weight: 600;
                }
                &__price {
                    font-size: 1rem;
                    font-family: "Lato", sans-serif;
                    font-weight: 300;
                }
                &__weight {
                    font-size: 0.9rem;
                    font-family: "Lato", sans-serif;
                    font-weight: 300;
                    color: #666;
                }
            }
        }
    }
</style>
